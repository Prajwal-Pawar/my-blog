<div class="container">
  <h1 class="text-center mt-3">Create Post</h1>

  <form action="/post/save-post" method="POST">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input
        type="text"
        placeholder="title"
        name="title"
        id="title"
        class="form-control"
        required
      />
    </div>
    <div class="mb-3">
      <label for="desc" class="form-label">Description</label>
      <input
        type="text"
        placeholder="description"
        name="description"
        id="desc"
        class="form-control"
      />
    </div>
    <div class="mb-3">
      <label for="content" class="form-label">Content</label>
      <textarea
        name="content"
        placeholder="post"
        cols="30"
        rows="10"
        id="content"
        class="form-control"
        required
      ></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save Post</button>
  </form>
</div>
